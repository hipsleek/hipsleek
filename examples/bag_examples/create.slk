data node {
 int val;
 node next;
}.

pred ll< n, S> ==  self=null & n=0 & S={}
 or self::node<v, r> * r::ll<n-1, S1> & S=union(S1, {v})
 inv n>=0.

pred lseg<p, n, S> == self=p & n=0 & S={}
 or self::node<v, r> * r::lseg<p, n-1, S1> & S=union(S1, {v})
 inv n>=0.

