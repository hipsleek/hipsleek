data node {
   node nxt;
}.

pred olseg<p> == self::node<p>
  or (exists a,b: self::node<a> * a::node<b> * b::olseg<p>)
 inv self!=null.

lemma_unsafe self::olseg<p> <- 
     (exists u,w: self::olseg<u>*u::node<w>*w::node<p>).

lemma_unsafe self::olseg<p> <- 
    (exists u,uu: self::node<uu>*uu::olseg<u>*u::node<p>).

