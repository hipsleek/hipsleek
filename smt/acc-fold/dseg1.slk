data node {
  int val;
  node prev;
  node next;
}.

pred dseg<pr, p, last> == self=p & pr=last
  or self::node<_,pr, q> * q::dseg<self,p,last>.


lemma_safe  self::dseg<pr,p,last> -> self::dseg<pr,p1,last2>*p1::dseg<last2,p,last>.


lemma_safe  self::dseg<pr,p,last> & self!=p -> self::dseg<pr,last,k>*last::node<_,k,p>.


checkentail_exact  
self=p & pr=last
  or self::node<_,pr, q> * q::dseg<self,p,last>
                         |- self::dseg<pr,last,k>*last::node<_,k,p>.

checkentail_exact  
self=p & pr=last
                         |- self::dseg<pr,last,k>*last::node<_,k,p>.

checkentail_exact  
  self::node<_,pr, q> * q::dseg<self,p,last> & self!=p
                         |- self::dseg<pr,last,k>*last::node<_,k,p>.


